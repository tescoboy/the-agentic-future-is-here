[flake8]
max-line-length = 100
extend-ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
    F401,  # imported but unused (handled by isort)
    F403,  # wildcard import (handled by isort)
    F405   # name may be undefined (handled by isort)
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    htmlcov,
    reference,
    data,
    logs
per-file-ignores =
    __init__.py:F401
    tests/*:E501
max-complexity = 10

